	<organization>
		<name>Golden T Studios</name>
		<url>http://www.goldenstudios.or.id</url>
	</organization>

	<dependencies>
		<dependency>
			<groupId>id.or.goldenstudios</groupId>
			<artifactId>golden</artifactId>
			<version>${version-golden}</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.2</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.4</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<links>
						<link>http://java.sun.com/j2se/1.4.2/docs/api/</link>
					</links>
					<overview>
						${basedir}/src/main/java/overview.html
					</overview>
				</configuration>
			</plugin>
		</plugins>
	</reporting>
	<properties>
		<version-golden>0.2.4-SNAPSHOT</version-golden>
